<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  

<!--============================== Bedroom Facilities ==============================-->

<!--====================== dresser ======================--> 

  <ThingDef ParentName="Anon2FurnitureWithQualityBase">
    <defName>Anon2Dresser</defName>
    <label>dresser</label>
    <description>A place for colonist to store personal belongings. When placed with a bed it will increase comfort slightly.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/BedroomStuff/Anon2Dresser</texPath>
	  <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,3)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <size>(2,1)</size>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.7</fillPercent>
    <minifiedDef>MinifiedThing</minifiedDef>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>900</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>15</Beauty>
      <Mass>40</Mass>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
			<Comfort>0.1</Comfort>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
      </li>
    </comps>
    <pathCost>80</pathCost>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
    <designationCategory>ANON2MF</designationCategory>
    <surfaceType>Item</surfaceType>
    <defaultPlacingRot>South</defaultPlacingRot>
    <techLevel>Medieval</techLevel>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
  </ThingDef>


