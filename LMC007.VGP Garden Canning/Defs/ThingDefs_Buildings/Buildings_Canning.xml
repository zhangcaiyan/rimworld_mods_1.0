<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="VG_BenchBase">
    <defName>CanningFactory</defName>
    <label>canning table</label>
    <thingClass>Building_WorkTable</thingClass>
    <description>The canning table needs to be loaded with steel. Then you make canned meat, vegetables, and meals.</description>
    <graphicData>
      <texPath>Things/Building/CanningTable</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2.33,1.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <costList>
      <Steel>150</Steel>
    </costList>
    <constructEffect>ConstructWood</constructEffect>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-3</Cleanliness>
    </statBases>
    <size>(2,1)</size>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
 	  <isMealSource>true</isMealSource>
     <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>100</fuelConsumptionRate>
        <fuelCapacity>50.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
      </li>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
     	<researchPrerequisites>
		<li>VG_CanningTable</li>
	</researchPrerequisites>
    <designationCategory>Production</designationCategory>
  </ThingDef>

    <ThingDef ParentName="VG_BuildingBase">
        <defName>VG_CanningFactory</defName>
        <label>Canning Factory</label>
    <description>Canning Factory can be set to make meals or to can diffenert types of food to preserve them.</description>
    <graphicData>
      <texPath>Things/Building/CanningFactory</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,2)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <costList>
      <Steel>200</Steel>
    </costList>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
    <constructEffect>ConstructWood</constructEffect>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <designationCategory>Production</designationCategory>
 	<size>(3,2)</size>
    	<passability>PassThroughOnly</passability>
    	<pathCost>70</pathCost>
	<rotatable>true</rotatable>
	<tickerType>Rare</tickerType>
   <statBases>
      	<WorkToBuild>2000</WorkToBuild>
      	<MaxHitPoints>180</MaxHitPoints>
      	<Flammability>1.0</Flammability>
      	<Cleanliness>-15</Cleanliness>
		<Mass>10</Mass>
    </statBases>
  <comps>
     	<li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Breakdownable"/>
     	<li Class="Canning.CompProperties_UniversalFermenter">
            <products>
                <li>
                    <thingDef>MealCannedFood</thingDef>
                    <ingredientFilter>
          			   <categories>
           			 <li>FoodRaw</li>
          			   </categories>
     				<disallowedCategories>
					<li>EggsFertilized</li>
				</disallowedCategories>
				<disallowedThingDefs>
					<li>Meat_Human</li>
					<li>Meat_Megaspider</li>
					<li>InsectJelly</li>
					<li>CannedFruit</li>
					<li>CannedVeg</li>
					<li>CannedMeat</li>
				</disallowedThingDefs>
               </ingredientFilter>
                    <maxCapacity>50</maxCapacity>
<baseFermentationDuration>120000</baseFermentationDuration>
                    <efficiency>0.1</efficiency>
                </li>
                <li>
                    <thingDef>CannedVeg</thingDef>
                    <ingredientFilter>
          			   <categories>
           			 <li>PlantFoodRaw</li>
          			   </categories>
				<disallowedThingDefs>
					<li>CannedVeg</li>
				</disallowedThingDefs>
               </ingredientFilter>
                    <maxCapacity>50</maxCapacity>
<baseFermentationDuration>120000</baseFermentationDuration>
                    <efficiency>1</efficiency>
                </li>
                <li>
                    <thingDef>CannedMeat</thingDef>
                    <ingredientFilter>
          			   <categories>
           			 <li>MeatRaw</li>
          			   </categories>
     				<disallowedCategories>
					<li>EggsFertilized</li>
				</disallowedCategories>
				<disallowedThingDefs>
					<li>Meat_Human</li>
					<li>Meat_Megaspider</li>
					<li>InsectJelly</li>
					<li>CannedFruit</li>
					<li>CannedMeat</li>
				</disallowedThingDefs>
               </ingredientFilter>
                    <maxCapacity>50</maxCapacity>
<baseFermentationDuration>120000</baseFermentationDuration>
                    <efficiency>1</efficiency>
                </li>
                <li>
                    <thingDef>CannedFruit</thingDef>
                    <ingredientFilter>
          			   <categories>
           			 <li>FruitFoodRaw</li>
          			   </categories>
				<disallowedThingDefs>
					<li>CannedFruit</li>
				</disallowedThingDefs>
               </ingredientFilter>
                    <maxCapacity>50</maxCapacity>
<baseFermentationDuration>120000</baseFermentationDuration>
                    <efficiency>1</efficiency>
                </li>
            </products>
		</li>
       </comps>
      	<researchPrerequisites>
		<li>VG_CanningFactory</li>
	</researchPrerequisites>
   </ThingDef>

</Defs>