<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== Tree crops ==============================-->

  <ThingDef ParentName="TreeBase">
    <defName>Plant_TreeMoney</defName>
    <label>money tree</label>
    <description>A mythic tree that is somehow able to grow silver. How a tree is able to produce inorganic material is beyond me.</description>
    <graphicData>
      <texPath>Things/Plant/TreeMoney</texPath>
      <graphicClass>Graphic_Random</graphicClass>
        <shadowData>
          <volume>(0.15, 0.3, 0.15)</volume>
          <offset>(0,0,-0.38)</offset>
        </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <statBases>
      <Beauty>2</Beauty>
      <Nutrition>1.25</Nutrition>
    </statBases>
    <ingestible />
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<growDays>20</growDays>
			<visualSizeRange>
        <min>0.8</min>
        <max>2.0</max>
      </visualSizeRange>
			<sowMinSkill>10</sowMinSkill>
      <sowTags>
				<li>Ground</li>
			</sowTags>
      <sowResearchPrerequisites>
        <li>MoneyTree</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.15</topWindExposure>
      <mustBeWildToSow>false</mustBeWildToSow>
      <immatureGraphicPath>Things/Plant/TreeMoney_Immature</immatureGraphicPath>
      <harvestWork>4000</harvestWork>
			<harvestTag>Standard</harvestTag>
      <harvestYield>25</harvestYield>
      <harvestedThingDef>Silver</harvestedThingDef>
      <harvestFailable>true</harvestFailable>
    </plant>
  </ThingDef>


</Defs>
