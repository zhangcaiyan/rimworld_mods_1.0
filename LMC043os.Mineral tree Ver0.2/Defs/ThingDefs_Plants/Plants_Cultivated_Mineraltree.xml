<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== 钢铁树 ==============================-->

  <ThingDef ParentName="TreeBase">
    <defName>Plant_TreeSteel</defName>
    <label>钢铁树</label>
    <description>一棵神秘的树，不知为什么能长出钢铁。我不明白一棵树是如何产生无机物质的，真的是摸不着头脑啊。</description>
    <graphicData>
      <texPath>Things/Plant/Tree_Steel</texPath>
      <graphicClass>Graphic_Random</graphicClass>
        <shadowData>
          <volume>(0.15, 0.3, 0.15)</volume>
          <offset>(0,0,-0.38)</offset>
        </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <statBases>
      <Beauty>2</Beauty>
      <Nutrition>1.25</Nutrition>
    </statBases>
    <ingestible />
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<growDays>5</growDays>
			<visualSizeRange>
        <min>0.8</min>
        <max>2.0</max>
      </visualSizeRange>
	<sowMinSkill>0</sowMinSkill>
      <sowTags>
				<li>Ground</li>
			</sowTags>
      <sowResearchPrerequisites>
        <li>Stage1_MT</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.15</topWindExposure>
      <mustBeWildToSow>false</mustBeWildToSow>
      <immatureGraphicPath>Things/Plant/Tree_Common</immatureGraphicPath>
      <harvestWork>200</harvestWork>
			<harvestTag>Standard</harvestTag>
      <harvestYield>50</harvestYield>
      <harvestedThingDef>Steel</harvestedThingDef>
      <harvestFailable>true</harvestFailable>
    </plant>
  </ThingDef>

