  <!--==================== Install artificial parts =======================-->
  <RecipeDef ParentName="Yokai_AddDragonP">
    <defName>InstallYokai_DragonArm</defName>
    <label>Install dragon arm</label>
    <description>Extract the power of a dragon from its still beating heart and place it an arm. This is a relatively easy magic, but some medical experience is required.</description>
    <jobString>Transplanting the power of the dragon</jobString>
    <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
    <workAmount>2500</workAmount>
    <skillRequirements>
      <Medicine>8</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Yokai_Bandage</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Yokai_DragonStone</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Yokai_Bandage</li>
        <li>Yokai_DragonStone</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Shoulder</li>
    </appliedOnFixedBodyParts>
    <addsHediff>Yokai_DragonArm</addsHediff>
  </RecipeDef>
