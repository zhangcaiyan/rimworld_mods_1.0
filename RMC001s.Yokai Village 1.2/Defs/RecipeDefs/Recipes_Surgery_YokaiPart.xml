  <!-- =============== Lamia シンプル Tail =============== -->
  <RecipeDef ParentName="SurgeryFleshAnimal">
    <defName>Yokai_Install_LamiaSPT</defName>
    <label>install simple Lamia tail</label>
    <description>Installs Lamia's  Simple Prosthetic tail. Requires a min skill in medicine of 4.</description>
    <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
    <jobString>Installing Simple Prosthetic Lamia tail.</jobString>
    <workAmount>2000</workAmount>
    <skillRequirements>
      <Medicine>4</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Yokai_LamiaSPT</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
      <thingDefs>
        <li>Yokai_LamiaSPT</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>LamiaTail</li>
    </appliedOnFixedBodyParts>
    <addsHediff>Hediff_Yokai_LamiaSPT</addsHediff>
    <recipeUsers>
      <li>Yokai_Lamia</li>
      <li>Yokai_Samia</li>
    </recipeUsers>
  </RecipeDef>
