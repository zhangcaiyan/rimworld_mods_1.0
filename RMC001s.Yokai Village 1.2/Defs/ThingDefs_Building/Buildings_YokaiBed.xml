<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--==================== 医療用寝袋 ======================== -->
  <ThingDef ParentName="BedWithQualityBase">
    <defName>Yokai_MRoll</defName>
    <label>Medicinal sleeping bag</label>
    <description>A fusion of modern convenience and Yokai tradition; this sleeping bag has been treated with Yokai medicine to encourage the body's natural regenerative processes during sleep or rest. Like any other sleeping bag, it can be rolled up for easy transport. This bed-though not as comfy as an actual bed-is a favorite amongst caravans for its medicinal properties.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/Bed/Bedroll</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1,2)</drawSize>
    </graphicData>
    <castEdgeShadows>True</castEdgeShadows>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Mass>2</Mass>
      <Comfort>0.88</Comfort>
      <WorkToBuild>600</WorkToBuild>
      <BedRestEffectiveness>0.9</BedRestEffectiveness>
      <ImmunityGainSpeedFactor>1.11</ImmunityGainSpeedFactor>
      <MedicalTendQualityOffset>0.10</MedicalTendQualityOffset>
      <SurgerySuccessChanceFactor>1.1</SurgerySuccessChanceFactor>
    </statBases>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>Dresser</li>
          <li>EndTable</li>
        </linkableFacilities>
      </li>
    </comps>
    <size>(1,2)</size>
    <costList>
      <Yokai_JorouGumoThread>40</Yokai_JorouGumoThread>
      <Yokai_Herbs>5</Yokai_Herbs>
    </costList>
    <building>
      <bed_showSleeperBody>False</bed_showSleeperBody>
      <bed_healPerDay>10</bed_healPerDay>
      <bed_defaultMedical>true</bed_defaultMedical>
      <bed_caravansCanUse>true</bed_caravansCanUse>
    </building>
    <pathCost>5</pathCost>
    <passability>Standable</passability>
  </ThingDef>
