  <!-- 妖怪衣 -->
  <ThingDef ParentName="Yokai_KimonoBase">
    <defName>Yokai_Kimono_Koromo</defName>
    <label>Yokai Wear</label>
    <description>Spacers wile their time with fancy cloths, while a bit of magic allows this simple garment to ward against heat and cold.
       \nAs such magics draw upon the Yokai, the thread resonates with nature, endearing the wearer to all animals.</description>
    <graphicData>
      <texPath>Things/Item/Apparel/YokaiWear/YokaiWear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToMake>4200</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.55</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.40</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <TameAnimalChance>0.10</TameAnimalChance>
      <TrainAnimalChance>0.18</TrainAnimalChance>
      <ImmunityGainSpeed>0.01</ImmunityGainSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Item/Apparel/YokaiWear/YokaiWear</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <thingCategories>
      <li>Yokai_Kimono</li>
    </thingCategories>
  </ThingDef>
