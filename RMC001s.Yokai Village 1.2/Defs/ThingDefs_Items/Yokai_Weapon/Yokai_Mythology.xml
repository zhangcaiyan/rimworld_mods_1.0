    </statBases>
    <equippedAngleOffset>40</equippedAngleOffset>
    <equippedStatOffsets>
      <MoveSpeed>+1.00</MoveSpeed>
      <AimingDelayFactor>-0.25</AimingDelayFactor>
      <ShootingAccuracyPawn>+0.5</ShootingAccuracyPawn>
