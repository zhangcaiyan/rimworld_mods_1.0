        <range>45</range>
        <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
        <burstShotCount>10</burstShotCount>
        <soundCast>Bow_Large</soundCast>
        <muzzleFlashScale>9</muzzleFlashScale>
