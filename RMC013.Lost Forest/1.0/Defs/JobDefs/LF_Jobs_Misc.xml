<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <!-- ============= Joy - Rest in hot spring ============= -->
  <JobDef>
    <defName>LFJob_RestInHotSpring</defName>
    <driverClass>LostForest.JobDriver_LFRestInHotSpring</driverClass>
    <reportString>resting at TargetA.</reportString>
    <joyDuration>4000</joyDuration>
    <joyKind>LFJoyKind_HotSpringRelaxation</joyKind>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>
  
