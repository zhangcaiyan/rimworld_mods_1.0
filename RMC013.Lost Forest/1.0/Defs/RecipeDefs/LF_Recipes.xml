<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--=============== LF_HolyWoodLog ====================-->

	<RecipeDef>
		<defName>MakeHolyWood150</defName>
		<label>make 150 AncientWood</label>
		<description>Make lost ancient wood.</description>
		<jobString>Making 150 AncientWood</jobString>
		<workAmount>1000</workAmount>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<recipeUsers>
			<li>CraftingSpot</li>
		</recipeUsers>
		<allowMixingIngredients>true</allowMixingIngredients>
		<targetCountAdjustment>150</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>150</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>LF_MofuMofu</li>
						<li>LF_FukaFuka</li>
						<li>LF_FuwaFuwa</li>
					</thingDefs>
				</filter>
				<count>100</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>LF_FoxiaTears</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
				<li>LF_MofuMofu</li>
				<li>LF_FukaFuka</li>
				<li>LF_FuwaFuwa</li>
				<li>LF_FoxiaTears</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<LF_WoodLog>150</LF_WoodLog>
		</products>
		<skillRequirements>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
	</RecipeDef>

