<Defs>

  <!-- ============= Waterway Drawing ============= -->
  
  <WorkGiverDef>
    <defName>LFWG_WaterwayDrawing</defName>
    <label>draw waterway at work spot</label>
    <giverClass>LostForest.WorkGiver_LFWaterwayDrawing</giverClass>
    <workType>Mining</workType>
    <priorityInType>40</priorityInType>
    <verb>work</verb>
    <gerund>working</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
  </WorkGiverDef>

  <!-- ============= WaterVein Drilling ============= -->
  
  <WorkGiverDef>
    <defName>LFWG_KAZUSASystem</defName>
    <label>drill water vein at the KAZUSA system</label>
    <giverClass>LostForest.WorkGiver_LF_KAZUSASystem</giverClass>
    <workType>Mining</workType>
    <priorityInType>40</priorityInType>
    <verb>drill</verb>
    <gerund>drilling</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
  </WorkGiverDef>
  
  <WorkGiverDef>
    <defName>LFWG_WaterVeinDrill</defName>
    <label>drill water vein at the drill</label>
    <giverClass>LostForest.WorkGiver_LFWaterVeinDrill</giverClass>
    <workType>Mining</workType>
    <priorityInType>40</priorityInType>
    <verb>drill</verb>
    <gerund>drilling</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
  </WorkGiverDef>

  <!-- ============= Refuel Lantern ============= -->
  
  <WorkGiverDef>
    <defName>LFWG_RefuelOfLantern</defName>
    <label>refuel of lantern</label>
    <giverClass>LostForest.WorkGiver_LFRefuelEqLantern</giverClass>
    <workType>Hauling</workType>
    <priorityInType>59</priorityInType>
    <verb>refuel</verb>
    <gerund>refueling</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
  </WorkGiverDef>

  <!-- ============= Firefighter for Animals ============= -->
  
  <WorkGiverDef>
    <defName>LFWG_FightFiresAnimals</defName>
    <label>fight fires</label>
    <giverClass>LostForest.WorkGiver_LFAnimalFightFires</giverClass>
    <workType>Firefighter</workType>
    <emergency>true</emergency>
    <verb>extinguish</verb>
    <gerund>extinguishing</gerund>
    <canBeDoneWhileDrafted>true</canBeDoneWhileDrafted>
    <autoTakeablePriorityDrafted>20</autoTakeablePriorityDrafted>
    <forceMote>Mote_FeedbackExtinguish</forceMote>
  </WorkGiverDef>

